{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      //These will be updated accordingly in future..These are just to accomodate absolute imports around the application.
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@shared/*": ["shared/*"],
      "@componentData/*": ["componentData/*"],
      "@pages/*": ["pages/*"],
      "@atoms/*": ["components/atoms/*"],
      "@molecules/*": ["components/molecules/*"],
      "@blocks/*": ["components/blocks/*"],
      "@organisms/*": ["components/organisms/*"],
      "@layout/*": ["components/layout/*"],
      "@modules/*": ["modules/*"],
      "@images/*": ["public/images/*"],
      "@modals/*": ["skeletons/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "components/atoms/Icons/stock/eyeIcon.jsx", "components/atoms/Icons/stock/eyeIcon.jsx", "components/blocks/card/OpportunityCard.jsx", "components/blocks/card/OpportunityCard.jsx"],
  "exclude": ["node_modules"]
}
